<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/banner"
    >

    <TextView
        android:id="@+id/txt_title_products"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:text="@string/services_txt_title"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_rate_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_title_products"
        android:layout_margin="10dip"
        android:text="@string/services_txt_rate_service"
        android:textColor="#ffffff"
        android:textSize="18sp" />
<ImageView 
    android:id="@+id/img_results"
    android:layout_height="40dip"
    android:layout_width="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/txt_title_products"
    android:layout_marginRight="10dip"
    android:src="@drawable/view_results"
    />

<ListView 
    android:id="@+id/list_services"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/img_results"
    />

</RelativeLayout>