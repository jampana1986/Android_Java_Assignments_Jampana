<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4791FF" >

    <TextView
        android:id="@+id/title_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:text="@string/results_lable"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/title_it"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_results"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:text="@string/results_lable_it"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold" />
 <ProgressBar
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:layout_centerInParent="true"
       android:id="@+id/progressBar1"/>   
    <TableLayout
        android:id="@+id/table_layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_it"
        android:layout_marginTop="10dip"
        android:background="#0066FF" >

        <TableRow
            android:id="@+id/table_row_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:background="#0066FF" />

            <TextView
                android:id="@+id/txt_mtd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="@string/results_txt_mtd"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />
         

            <TextView
                android:id="@+id/txt_ytd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="@string/results_txt_ytd"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>
<ListView 
    android:id="@+id/list_ratings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/table_layout_title"
    />
</RelativeLayout>