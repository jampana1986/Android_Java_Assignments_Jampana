<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidassignment"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!-- Used to request data from the Google+ APIs in the SignInActivity -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Required if we need to invalidate access tokens -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <meta-data android:name="com.google.android.gms.version" 
            android:value="@integer/google_play_services_version" />
        
         <activity
            android:name="com.androidassignment.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity
            android:name="com.androidassignment.ResultsActivity"
           />
         <activity
            android:name="com.androidassignment.RateProductActivity"
           />
          <activity
            android:name="com.androidassignment.ServicesActivity"
           />
    </application>

</manifest>
